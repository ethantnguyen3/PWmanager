def verify_master_password():
    try:
        conn = psycopg2.connect(user='postgres', password='P!gsheep1234', host = '127.0.0.1', database='password')
        conn.close()                   # Close the connection if successful
        return True
    except psycopg2.OperationalError:
        return False
