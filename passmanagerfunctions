from hashlib import sha256
import random
import secrets
import smtplib
from email.mime.text import MIMEText
from selenium import webdriver
import time
KEY = secrets.token_hex(32)
def send_email(token, recipient_email, passw):
    sender_email = recepient_email  # Replace with your email
    sender_password = "pigsheep123" # later replace with email automation
    subject = "Your Secret Token"
    body = f"Your generated token is: {token}"

    msg = MIMEText(body)
    msg['Subject'] = subject
    msg['From'] = sender_email
    msg['To'] = recipient_email

    try:
        with smtplib.SMTP_SSL('smtp.example.com', 465) as server:  # Replace with your SMTP server and port
            server.login(sender_email, sender_password)
            server.sendmail(sender_email, recipient_email, msg.as_string())
        print("Email sent successfully!")
    except Exception as e:
        print(f"Failed to send email: {e}")

def make_password(txt, app_name):
    salt = get_hexdigest(KEY, app_name)[:20]
    hsh = get_hexdigest(salt, txt)
    return ''.join(salt, hsh)

def get_hexdigest(salt, txt):
    return sha256(salt + txt).hexdigest()

def password(txt, app_name, length):
    raw_hex = make_password(txt, app_name)
    CHARACTER = ('qwertyuiopasdfghjklzxcvbnm', 'QWERTYUIOPASDFGHJKLZXCVBNM', '1234567890', '!@#$%^&*()_+-=[]{}\|;:,.<>?/~`')
    num = int(raw_hex, 16)
    num_chars = len(CHARACTER)
    chars = []
    while len(chars) < length:
        num, idx = divmod(num, num_chars)
        chars.append(CHARACTER[idx])
    return ''.join(chars)
